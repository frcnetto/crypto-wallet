<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/nav_header_vertical_spacing">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currencyAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/exchangeDarkColor"
        app:cardCornerRadius="50dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toStartOf="@+id/currencyName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/currencySymbol"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/ic_bitcoin_logo" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currencyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/currencyAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/currencyAvatar"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textSize="16sp"
        android:text="Bitcoin"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currencyValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/currencyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/currencyAvatar"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="R$ 6.543,00"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currencyOscillation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/currencyValue"
        app:layout_constraintBottom_toBottomOf="@id/currencyValue"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:text="+ 3.4567%"/>
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintStart_toStartOf="@id/currencyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currencyValue"/>

</androidx.constraintlayout.widget.ConstraintLayout>